<script>
  import wepy from 'wepy'
  import { getName } from '@/utils/api'

  const LIMIT = 10 // 每页10条
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '结果'
    }
    components = {
    }

    data = {
      nameInfo: {}, // 名字信息
      listData: [], // 列表数据
      currentPage: 1, // 当前页面
      offset: 0, // 从第几条起
      totalPage: 0 // 总页数
    }

    computed = {
    }

    methods = {
      toDetail (name, score) {
        console.log(name, score, this.nameInfo.birthDate)
        wepy.navigateTo({
          url: `/pages/detail/index?name=${name}&score=${score}&birthDate=${this.nameInfo.birthDate}`
        })
      },
      // 滚动到底部
      scrollToBottom () {
        // TODO 加载loading && 加载到最后一页
        if (this.totalPage > this.currentPage) {
          this.currentPage++
          this.offset += LIMIT
          this.getListData()
        }
      }
    }

    events = {
    }
    getListData () {
      let params = {
        limit: LIMIT,
        offset: this.offset,
        dateType: 'dateType',
        ...this.nameInfo
      }
      getName(params).then(res => {
        console.log(res)
        if (this.offset === 0) {
          this.totalPage = Math.ceil(res.data.total / LIMIT)
        }
        this.listData = this.listData.concat(res.data.rows)
        this.$apply()
      })
    }
    onLoad(option) {
      this.nameInfo = wepy.getStorageSync('NAME_INFO')
      this.getListData()
    }
  }
</script>
